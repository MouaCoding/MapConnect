    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/simple_user" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/simple_user" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/simple_user" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/simple_user" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar3" />
